generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resultado {
  id           String     @id @default(uuid())
  bimestre     Bimestre
  disciplina   Disciplina
  nota         Float
  criadoEm     DateTime   @default(now())
  atualizadoEm DateTime   @updatedAt

  @@map("resultados")
}

enum Bimestre {
  PRIMEIRO
  SEGUNDO
  TERCEIRO
  QUARTO
}

enum Disciplina {
  Biologia
  Artes
  Geografia
  Sociologia
}
